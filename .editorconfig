root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
indent_style = space
indent_size = 4

[*.{lua,obj2,anm2,scn2,cam2,tra2}]
indent_style = space
indent_size = 4
insert_final_newline = false

[*.yaml]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
